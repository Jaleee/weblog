<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jale.weblog.shopping.service.mapper.GoodsMapper">

    <update id="casUpdate" parameterType="map">
        update goods
        <set>
            <if test="newStockCount != null">
                stock_count = #{newStockCount}
            </if>
        </set>
        <where>
            id = #{id}
            <if test="oldStockCount != null">
                and stock_count = #{oldStockCount}
            </if>
        </where>
    </update>

</mapper>